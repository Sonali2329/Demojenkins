pipeline {
    agent any

    environment {
        name = 'sonali'
    }

    parameters {
        string(name: 'person', defaultValue: 'Sonali Agale', description: "who are you?")
        booleanParam(name: 'isMale', defaultValue: true, description: "")
        choice(name: 'City', choices: ['Jaipur', 'mumbai', 'pune'], description: "")
    }

    stages {

        stage('Run multiple command in one stage or in 1 cmd') {
            steps {
                sh '''
                    ls
                    date
                '''
            }
        }

        stage('Environment Variables') {
            steps {
                sh 'echo "${BUILD_ID}"'
                sh 'echo "${name}"'
            }
        }

        stage('parameters') {
            steps {
                echo 'deploy on test'
                sh 'echo "${person}"'
            }
        }

        stage('Continue?') {
            steps {
                script {
                    input message: "Should we continue?", ok: "Yes, continue"
                }
            }
        }

        stage('Deploy on prod') {
            steps {
                echo 'deploy on prod'
            }
        }
    }
    post{
        always{
            echo "I will always say hello"
        }
        failure {
            echo "Failure"
        }
        success{
            echo "success"
        }
    }
}
